	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Wisej-4" Version="4.0.*-*" />
		<PackageReference Include="Wisej-4-Barcode" Version="4.0.*-*" />
		<PackageReference Include="Wisej-4-Camera" Version="3.5.5-preview.7" />
		<ProjectReference Include="..\..\..\Wisej.DemoBrowser.Common\Wisej.DemoBrowser.Common.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <Compile Update="Scanner.cs">
	    <SubType>UserControl</SubType>
	  </Compile>
	</ItemGroup>

</Project>
